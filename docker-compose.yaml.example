version: '3.8'

services:
  gholi-redis:
    image: redis/redis-stack:latest
    container_name: gholi-redis
    ports:
      - "8003:8001"
      - "6380:6379"
    volumes:
      - gholi-redis-volume:/data
    networks:
      - gholi-network

  gholi-db:
    image: postgres:latest
    container_name: gholi-db
    restart: always
    environment:
      POSTGRES_DB: GholiDB
      POSTGRES_USER: user
      POSTGRES_PASSWORD: secret
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD", "pg_isready"]
      interval: 10s
      timeout: 5s
      retries: 5
    volumes:
      - gholi-db-volume:/var/lib/postgresql/data
    networks:
      - gholi-network

  gholi-nginx:
    image: nginx:latest
    container_name: gholi-nginx
    restart: always
    ports:
      - "8080:80"
    volumes:
      - ./nginx-config:/etc/nginx/conf.d
    networks:
      - gholi-network

volumes:
  gholi-db-volume:
  gholi-redis-volume:

networks:
  gholi-network:
    driver: bridge
